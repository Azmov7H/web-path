generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  name          String
  password      String
  createdAt     DateTime       @default(now())
  avatar        String?
  role          Role           @default(STUDENT)
  courses       Course[]       @relation("InstructorCourses")
  progress      Progress[]
  reviews       Review[]
  subscriptions Subscription[]
}


// Course model
model Course {
  id            Int            @id @default(autoincrement())
  title         String
  slug          String         @unique
  description   String
  thumbnail     String?
  price         Float          @default(0)
  published     Boolean        @default(false)
  createdAt     DateTime       @default(now())
  instructorId  Int
  instructor    User           @relation("InstructorCourses", fields: [instructorId], references: [id])
  reviews       Review[]
  sections      Section[]
  subscriptions Subscription[]
}


// Section model
model Section {
  id       Int      @id @default(autoincrement())
  title    String
  order    Int
  courseId Int
  lessons  Lesson[]
  course   Course   @relation(fields: [courseId], references: [id])
}


// Lesson model
model Lesson {
  id        Int        @id @default(autoincrement())
  title     String
  content   String?
  videoUrl  String?
  type      LessonType
  order     Int
  sectionId Int
  section   Section    @relation(fields: [sectionId], references: [id])
  progress  Progress[]
  quiz      Quiz?
}


// Progress model
model Progress {
  id        Int       @id @default(autoincrement())
  completed Boolean   @default(false)
  watchedAt DateTime?
  userId    Int
  lessonId  Int
  lesson    Lesson    @relation(fields: [lessonId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([userId, lessonId])
}


// Quiz model
model Quiz {
  id        Int        @id @default(autoincrement())
  lessonId  Int        @unique
  questions Question[]
  lesson    Lesson     @relation(fields: [lessonId], references: [id])
}


// Question model
model Question {
  id      Int      @id @default(autoincrement())
  text    String
  quizId  Int
  options Option[]
  quiz    Quiz     @relation(fields: [quizId], references: [id])
}


// Option model
model Option {
  id         Int      @id @default(autoincrement())
  text       String
  correct    Boolean  @default(false)
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
}


// Review model
model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  userId    Int
  courseId  Int
  course    Course   @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

// Subscription model
model Subscription {
  id       Int                @id @default(autoincrement())
  status   SubscriptionStatus @default(ACTIVE)
  startAt  DateTime           @default(now())
  endAt    DateTime?
  userId   Int
  courseId Int
  course   Course             @relation(fields: [courseId], references: [id])
  user     User               @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

// User role enum
enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

// Lesson type enum
enum LessonType {
  VIDEO
  ARTICLE
  CODE
  QUIZ
}

// Subscription status enum
enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELED
}
